  <div  class="col col-lg-10 col-xl-8">
    <figure id="question" class="note note-primary p-4">
      <blockquote class="blockquote">
        <p class="pb-2">
          <%= @question %>
        </p>
      </blockquote>
      <figcaption class="blockquote-footer mb-0">
        You
      </figcaption>
    </figure>
    <figure id="answer" class="note note-success p-4">
      <blockquote class="blockquote">
        <p class="pb-2">
          <%= @answer %>
        </p>
      </blockquote>
      <figcaption class="blockquote-footer mb-0">
        Your coach
      </figcaption>
    </figure>
  </div>
<button class="btn btn-primary"><%= link_to 'Ask a new question', ask_path %></button>
